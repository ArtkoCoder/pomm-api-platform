{
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:ArtkoCoder/pomm-api-platform.git"
        }
    ],
    "require": {
        "php": ">=7.0",
        "api-platform/core": "^2.5",
        "symfony/asset": "5.1.*",
        "symfony/framework-bundle": "5.1.*",
        "symfony/monolog-bundle": "^3.5",
        "pomm-project/pomm-bundle": "^3.0",
        "pomm-project/api-platform": "dev-master"
    },
    "require-dev": {
        "behatch/contexts": "^3.3",
        "behat/mink-goutte-driver": "*"
    },
    "autoload": {
        "psr-4": { "AppBundle\\": "src/" },
        "classmap": [ "app/AppKernel.php" ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-assets-install": "relative"
    }
}
